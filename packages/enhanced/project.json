{
  "name": "enhanced",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/enhanced/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{workspaceRoot}/packages/enhanced/dist"],
      "options": {
        "parallel": false,
        "outputPath": "packages/enhanced/dist",
        "main": "packages/enhanced/src/index.ts",
        "additionalEntryPoints": [
          "packages/enhanced/src/*.ts",
          "packages/enhanced/src/lib/**/*.ts",
          "packages/enhanced/src/runtime/**/*.ts",
          "packages/enhanced/src/schemas/**/*.ts",
          "packages/enhanced/src/types/**/*.ts",
          "packages/enhanced/src/wrapper/**/*.ts"
        ],
        "tsConfig": "packages/enhanced/tsconfig.lib.json",
        "assets": [],
        "project": "packages/enhanced/package.json",
        "compiler": "swc",
        "rollupConfig": "packages/enhanced/rollup.config.js",
        "format": ["cjs", "esm"],
        "external": ["@module-federation/*"]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/enhanced/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "node packages/enhanced/test/script.js",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run enhanced:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run enhanced:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": ["type:pkg"]
}
